# ログレベル設定
LOG_LEVEL=INFO

# データベース設定
DATABASE_URL=sqlite:///./backend/data/store_database.db

# 認証設定
# 重要: 本番環境では必ず強力なランダムキーに変更してください
# 生成方法: openssl rand -hex 32 または python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# アプリケーション設定
APP_NAME=Order System API
APP_VERSION=1.0.0
DEBUG=True

# CORS設定
ALLOWED_ORIGINS=http://localhost:3000

# 監視設定
METRICS_ENABLED=True
HEALTH_CHECK_ENABLED=True

# AIモデルの保存場所
AI_MODEL_STORAGE_DIR=backend/app/ml/saved_models